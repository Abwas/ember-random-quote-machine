<md-content class="md-padding">
  <form name="userForm">
    {{#md-input-container flex='' value=author}}
      <label>Author</label>
      {{md-input}}
    {{/md-input-container}}

    {{#md-input-container flex='' value=message}}
      <label>Message</label>
      {{md-textarea columns="1" md-maxlength="930"}}
    {{/md-input-container}}

    <section layout="row" layout-sm="column" layout-align="center center">
      {{#md-button class="md-raised md-primary"}}Create{{/md-button}}
    </section>
  </form>
</md-content>
